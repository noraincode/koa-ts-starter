{
  "name": "koa-ts-starter",
  "version": "1.0.0",
  "description": "A Koa TypeScript starter project",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "npx pm2 start pm2.config.js --env production",
    "stop": "npx pm2 stop pm2.config.js"
  },
  "tags": [
    "docker",
    "typescript",
    "koa",
    "pino"
  ],
  "keywords": [
    "docker",
    "typescript",
    "koa",
    "pino"
  ],
  "author": "https://github.com/noraincode",
  "license": "LGPL-3.0-only",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "dotenv": "^16.3.1",
    "http-status-codes": "^2.3.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-pino-logger": "^4.0.0",
    "koa-response-time": "^2.1.0",
    "koa-router": "^12.0.1",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3"
  },
  "devDependencies": {
    "@types/koa": "^2.13.11",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-pino-logger": "^3.0.4",
    "@types/koa-response-time": "^2.1.5",
    "@types/koa-router": "^7.4.7",
    "@types/koa__cors": "^4.0.3",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
